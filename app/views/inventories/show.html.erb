<div class="row">


 <legend class="form" align="center">Name: <%=@inventory.name%> </legend>
</div>
  <div class="well col -xs-8 col-xs-offset-2">
    <h4 class="center description"><strong> Description</strong></h4>
    <hr>
   <p align="center"> <%= @inventory.description%> </p>
 
   <p align="center"> <%=@inventory.start%> and <%=@inventory.finish%></p>
   <div class="inventory-actions">
    <%= link_to "Edit This Inventory", "/inventories/#{@inventory.id}/edit", method: :get, class: "btn btn-xs btn-primary" %>
